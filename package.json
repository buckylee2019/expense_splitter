{
  "name": "expense-splitter",
  "version": "1.0.0",
  "description": "A Splitwise-like expense sharing application",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "npm install --production",
    "deploy:dev": "./scripts/deploy.sh dev",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:prod": "./scripts/deploy.sh prod",
    "package": "rm -f deployment.zip && zip -r deployment.zip lambda.js src/ package.json package-lock.json node_modules/ -x 'node_modules/aws-sdk/*' 'node_modules/lodash/*' '*.git*' 'tests/*' '*.md'"
  },
  "keywords": [
    "expense",
    "splitting",
    "sharing",
    "finance"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.883.0",
    "@aws-sdk/client-s3": "^3.844.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "aws-sdk": "^2.1490.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "serverless-http": "^3.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
